{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "rootDir": "src",
        "strict": true,
        "typeRoots": ["./typings", "./node_modules/@types/"]
    },
    "include": ["src/**/*"]
}
